<UserControl x:Class="Dispetcher2.Controls.LaborControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dispetcher2.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontFamily="Calibri" FontSize="15">
    <Grid x:Name="mainGrid" ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="200"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <local:CheckedOrderControl Grid.Column="0" Visibility="{Binding Path=DataVisibility}" />

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid x:Name="commandGrid" Visibility="{Binding Path=CommandVisibility}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Запрос" HorizontalAlignment="Left" Grid.Column="0"
                        Margin="5" VerticalAlignment="Center" Width="75" Command="{Binding Path=RequestCommand}"/>
                <Button Content="Excel" HorizontalAlignment="Left" Grid.Column="1"
                        Margin="5" VerticalAlignment="Center" Width="75" Command="{Binding Path=ExcelCommand}"/>
                <CheckBox Grid.Column="2" Content="Подробно по деталям" IsChecked="{Binding Path=ShowDetailFlag}" 
                          VerticalAlignment="Center"/>
                <CheckBox Grid.Column="3" Content="Подробно по операциям" IsChecked="{Binding Path=ShowOperationFlag}" 
                          VerticalAlignment="Center" />
            </Grid>
            <local:OperationControl x:Name="opc" Grid.Row="1" Visibility="{Binding Path=OperationVisibility}" />

            <local:WaitControl Grid.Row="1" Height="50" Width="300" VerticalAlignment="Top" HorizontalAlignment="Left" 
                               Margin="5" Visibility="{Binding Path=WaitVisibility}" />
        </Grid>
    </Grid>
</UserControl>