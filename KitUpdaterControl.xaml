<UserControl x:Class="Dispetcher2.KitUpdaterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dispetcher2"
             mc:Ignorable="d" Height="300" Width="600">
    <StackPanel>
        <TextBlock Text="{Binding Status, Mode=OneWay}" FontSize="16" />
        <ProgressBar Height="0.5cm" Value="{Binding Progress, Mode=OneWay}" />
        <ListBox FontSize="16" ItemsSource="{Binding ErrorCollection, Mode=OneWay}" />
    </StackPanel>
</UserControl>
